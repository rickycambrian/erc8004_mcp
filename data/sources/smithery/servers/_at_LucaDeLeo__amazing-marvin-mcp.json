      "name": "marvin_add_task",
      "annotations": {
        "title": "Add Task to Amazing Marvin",
        "readOnlyHint": false,
        "openWorldHint": true,
        "idempotentHint": false,
        "destructiveHint": false
      },
      "description": "\n        Create a new task in Amazing Marvin with full support for scheduling, labels, and organization.\n\n        This tool creates tasks with auto-completion support for shortcuts in the title.\n        Amazing Marvin shortcuts: #Project, @label, ~timeEstimate, +dueDate, ^priority.\n\n        Args:\n            params (AddTaskInput): Validated input parameters\n            ctx (Context): Smithery context with session configuration\n\n        Returns:\n            str: Success message with task ID and title, or error message\n        ",
      "inputSchema": {
        "type": "object",
        "$defs": {
          "AddTaskInput": {
            "type": "object",
            "title": "AddTaskInput",
            "required": [
              "title"
            ],
            "properties": {
              "day": {
                "anyOf": [
                  {
                    "type": "string",
                    "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
                  },
                  {
                    "type": "null"
                  }
                ],
                "title": "Day",
                "default": null,
                "description": "Schedule date in YYYY-MM-DD format to add task to daily schedule (e.g., '2024-03-15', '2024-12-25')"
              },
              "note": {
                "anyOf": [
                  {
                    "type": "string",
                    "maxLength": 5000
                  },
                  {
                    "type": "null"
                  }
                ],
                "title": "Note",
                "default": null,
                "description": "Additional notes or description for the task"
              },
              "title": {
                "type": "string",
                "title": "Title",
                "maxLength": 500,
                "minLength": 1,
                "description": "Task title. Supports Amazing Marvin shortcuts: #ProjectName (parent), @label (label), ~60 (time estimate in minutes), +YYYY-MM-DD (due date), ^1 (priority). Examples: 'Review budget #Work @urgent ~120 +2024-03-20', 'Call dentist ~15 +tomorrow'"
              },
              "due_date": {
                "anyOf": [
                  {
                    "type": "string",
                    "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
                  },
                  {
                    "type": "null"
                  }
                ],
                "title": "Due Date",
                "default": null,
                "description": "Due date in YYYY-MM-DD format for deadline tracking (e.g., '2024-03-20')"
              },
              "label_ids": {
                "anyOf": [
                  {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "maxItems": 20
                  },
                  {
                    "type": "null"
                  }
                ],
                "title": "Label Ids",
                "default": null,
                "description": "List of label IDs to attach to task (get from marvin_get_labels). Example: ['label_1', 'label_2']"
              },
              "parent_id": {
                "anyOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "null"
                  }
                ],
                "title": "Parent Id",
                "default": null,
                "description": "ID of parent project or category (get from marvin_get_categories). Example: 'cat_abc123xyz'"
              },
              "is_starred": {
                "anyOf": [
                  {
                    "type": "boolean"
                  },
                  {
                    "type": "null"
                  }
                ],
                "title": "Is Starred",
                "default": null,
                "description": "Whether to star/prioritize this task (true/false)"
              },
              "time_estimate": {
                "anyOf": [
                  {
                    "type": "integer",
                    "maximum": 86400000,
                    "minimum": 60000
                  },
                  {
                    "type": "null"
                  }
                ],
                "title": "Time Estimate",
                "default": null,
                "description": "Estimated time in milliseconds. Common values: 900000 (15 min), 1800000 (30 min), 3600000 (1 hour), 7200000 (2 hours)"
              }
            },
            "description": "Input model for creating a new task.",
            "additionalProperties": false
          }
        },
        "title": "marvin_add_taskArguments",
        "required": [
          "params"
        ],
        "properties": {
          "params": {
            "$ref": "#/$defs/AddTaskInput"
          }
        }
      },
      "outputSchema": {
        "type": "object",
        "title": "marvin_add_taskOutput",
        "required": [
          "result"
        ],
        "properties": {
          "result": {
            "type": "string",
            "title": "Result"
          }
        }
      }
