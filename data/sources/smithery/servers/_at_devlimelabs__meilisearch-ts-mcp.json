      "runtime": "node",
      "configSchema": {
        "type": "object",
        "required": [],
        "properties": {
          "MEILISEARCH_HOST": {
            "type": "string",
            "default": "http://localhost:7700",
            "description": "URL for the Meilisearch instance"
          },
          "MEILISEARCH_API_KEY": {
            "type": "string",
            "default": "",
