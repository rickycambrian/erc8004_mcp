{
  "qualifiedName": "@arkapravasinha/groww-mcp-server",
  "displayName": "Groww MCP Server",
  "description": "Enable seamless integration of Groww platform data and tools with language models to enhance financial decision-making and automation. Provide access to Groww-specific resources, execute financial operations, and utilize predefined prompts for investment workflows. Simplify interaction with Groww services through a standardized protocol for LLM applications.",
  "iconUrl": "https://icons.duckduckgo.com/ip3/groww.in.ico",
  "remote": true,
  "deploymentUrl": "https://server.smithery.ai/@arkapravasinha/groww-mcp-server",
  "connections": [
    {
      "type": "http",
      "deploymentUrl": "https://server.smithery.ai/@arkapravasinha/groww-mcp-server/mcp",
      "configSchema": {
        "type": "object",
        "title": "MCP Session Configuration",
        "required": [
          "apiKey"
        ],
        "properties": {
          "debug": {
            "type": "boolean",
            "default": false,
            "description": "Enable debug logging"
          },
          "apiKey": {
            "type": "string",
            "description": "API key for the Groww API"
          }
        },
        "description": "Schema for the /mcp endpoint configuration",
        "x-mcp-version": "1.0",
        "x-query-style": "dot+bracket",
        "additionalProperties": false
      }
    }
  ],
  "security": {
    "scanPassed": true
  },
  "tools": [
    {
      "name": "download_instruments_csv",
      "description": "Download/refresh the complete instruments CSV file from Groww containing all tradeable instruments",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "properties": {},
        "additionalProperties": false
      }
    },
    {
      "name": "search_instruments",
      "description": "Search for instruments by name, trading symbol, groww symbol, or other criteria from the loaded instruments data",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "query"
        ],
        "properties": {
          "limit": {
            "type": "integer",
            "default": 10,
            "maximum": 50,
            "minimum": 1,
            "description": "Maximum number of results to return"
          },
          "query": {
            "type": "string",
            "description": "Search query (name, trading symbol, groww symbol, etc.)"
          },
          "segment": {
            "enum": [
              "CASH",
              "FNO",
              "ALL"
            ],
            "type": "string",
            "default": "ALL",
            "description": "Filter by segment"
          },
          "exchange": {
            "enum": [
              "NSE",
              "BSE",
              "ALL"
            ],
            "type": "string",
            "default": "ALL",
            "description": "Filter by exchange"
          },
          "instrument_type": {
            "enum": [
              "EQ",
              "IDX",
              "FUT",
              "CE",
              "PE",
              "ALL"
            ],
            "type": "string",
            "default": "ALL",
            "description": "Filter by instrument type"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "get_instrument_details",
      "description": "Get detailed information about a specific instrument by trading symbol",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "trading_symbol"
        ],
        "properties": {
          "exchange": {
            "enum": [
              "NSE",
              "BSE"
            ],
            "type": "string",
            "description": "Exchange (optional, will search both if not provided)"
          },
          "trading_symbol": {
            "type": "string",
            "description": "Trading symbol (e.g., 'RELIANCE', 'NIFTY')"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "place_order",
      "description": "Place a new order in the market (stocks, F&O, etc.) - Official Groww API: POST /v1/order/create",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "trading_symbol",
          "quantity",
          "exchange",
          "segment",
          "product",
          "order_type",
          "transaction_type"
        ],
        "properties": {
          "price": {
            "type": "number",
            "description": "Price of the instrument in rupees for Limit order (decimal) - required for LIMIT and SL orders",
            "exclusiveMinimum": 0
          },
          "product": {
            "enum": [
              "CNC",
              "MIS",
              "NRML"
            ],
            "type": "string",
            "description": "Product type (required) - CNC, MIS, NRML"
          },
          "segment": {
            "enum": [
              "CASH",
              "FNO"
            ],
            "type": "string",
            "description": "Segment of the instrument such as CASH, FNO etc. (required)"
          },
          "exchange": {
            "enum": [
              "NSE",
              "BSE"
            ],
            "type": "string",
            "description": "Stock exchange (required)"
          },
          "quantity": {
            "type": "integer",
            "description": "Quantity of the instrument to order (required)",
            "exclusiveMinimum": 0
          },
          "validity": {
            "enum": [
              "DAY"
            ],
            "type": "string",
            "default": "DAY",
            "description": "Validity of the order (required) - currently only DAY is supported"
          },
          "order_type": {
            "enum": [
              "MARKET",
              "LIMIT",
              "SL",
              "SL_M"
            ],
            "type": "string",
            "description": "Order type (required) - MARKET, LIMIT, SL, SL_M"
          },
          "trigger_price": {
            "type": "number",
            "description": "Trigger price in rupees for the order (decimal) - required for SL and SL_M orders",
            "exclusiveMinimum": 0
          },
          "trading_symbol": {
            "type": "string",
            "minLength": 1,
            "description": "Trading Symbol of the instrument as defined by the exchange (required)"
          },
          "transaction_type": {
            "enum": [
              "BUY",
              "SELL"
            ],
            "type": "string",
            "description": "Transaction type of the trade (required) - BUY or SELL"
          },
          "order_reference_id": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9-]+$",
            "maxLength": 20,
            "minLength": 8,
            "description": "User provided 8 to 20 length alphanumeric string with at most two hyphens (-)"
          }
        },
        "additionalProperties": false
      }
    },
