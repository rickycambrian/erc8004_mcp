      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "filename"
        ],
        "properties": {
          "filename": {
            "type": "string",
            "description": "The filename of the image"
          },
          "maxDimension": {
            "type": "number",
            "description": "Maximum dimension in pixels (default: 200)",
            "exclusiveMinimum": 0
          }
        },
        "additionalProperties": false
