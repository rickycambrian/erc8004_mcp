        },
        "additionalProperties": false
      }
    },
    {
      "name": "get_image_metadata",
      "description": "Returns metadata about an image (filename, size, format, dimensions) without loading the full image",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "filename"
        ],
        "properties": {
          "filename": {
            "type": "string",
            "description": "The filename of the image to get metadata for (e.g., 'test.jpg')"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "convert_image",
      "description": "Converts an image to a different format (JPG, PNG, WebP, GIF). Returns the converted image.",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "filename",
          "targetFormat"
        ],
        "properties": {
          "quality": {
            "type": "number",
            "maximum": 100,
            "minimum": 1,
            "description": "Quality for lossy formats (1-100, default: 90)"
          },
          "filename": {
            "type": "string",
            "description": "The filename of the source image"
          },
          "targetFormat": {
            "enum": [
              "jpg",
              "jpeg",
              "png",
              "webp",
              "gif"
            ],
            "type": "string",
            "description": "The target format to convert to"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "resize_image",
      "description": "Resizes an image to specified dimensions. Can maintain aspect ratio or force exact dimensions.",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "filename"
        ],
        "properties": {
          "fit": {
            "enum": [
              "contain",
              "cover",
              "fill",
              "inside",
              "outside"
            ],
            "type": "string",
            "description": "How to fit the image (default: contain)"
          },
          "width": {
            "type": "number",
            "description": "Target width in pixels",
            "exclusiveMinimum": 0
          },
          "height": {
            "type": "number",
            "description": "Target height in pixels",
            "exclusiveMinimum": 0
          },
          "filename": {
            "type": "string",
            "description": "The filename of the image to resize"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "create_thumbnail",
