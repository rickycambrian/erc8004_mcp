          {
            "required": [
              "flight_icao"
            ]
          }
        ],
        "properties": {
          "flight_iata": {
            "type": "string",
            "description": "IATA flight code (e.g., 'BA123')"
          },
          "flight_icao": {
            "type": "string",
            "description": "ICAO flight code (e.g., 'BAW123')"
          }
        }
      }
    }
