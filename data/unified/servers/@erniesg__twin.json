{
  "id": "@erniesg/twin",
  "name": "@erniesg/twin",
  "display_name": "Twin Persona",
  "version": null,
  "description": "Generate personas for testing and prototyping. Build from your connected accounts or custom guidance to mirror real-world behavior. Export in multiple formats for easy sharing and integration.",
  "icon_url": null,
  "repository_url": null,
  "status": "active",
  "published_at": null,
  "tools": [
    {
      "name": "persona.generate_mock",
      "description": "Generate mock persona for testing with optional custom instructions",
      "inputSchema": {
        "type": "object",
        "properties": {
          "template": {
            "enum": [
              "developer",
              "designer",
              "manager",
              "student",
              "random"
            ],
            "type": "string",
            "default": "random"
          },
          "customInstructions": {
            "type": "string",
            "description": "Freeform custom instructions"
          }
        }
      }
    },
    {
      "name": "persona.generate_from_accounts",
      "description": "Generate persona from connected accounts (Google, GitHub, LinkedIn, Twitter)",
      "inputSchema": {
        "type": "object",
        "required": [
          "accounts"
        ],
        "properties": {
          "accounts": {
            "type": "object",
            "properties": {
              "github": {
                "type": "object"
              },
              "google": {
                "type": "object"
              },
              "twitter": {
                "type": "object"
              },
              "linkedin": {
                "type": "object"
              }
            }
          }
        }
      }
    },
    {
      "name": "persona.save",
      "description": "Save/update a persona (creates new version)",
      "inputSchema": {
        "type": "object",
        "required": [
          "supabaseId",
          "persona"
        ],
        "properties": {
          "persona": {
            "type": "object",
            "description": "Persona data to save"
          },
          "supabaseId": {
            "type": "string",
            "description": "User ID from Supabase auth"
          },
          "llmPreferences": {
            "type": "object",
            "properties": {
              "chat": {
                "type": "string"
              },
              "coding": {
                "type": "string"
              },
              "default": {
                "type": "string"
              },
              "analysis": {
                "type": "string"
              },
              "creative": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    {
      "name": "persona.get",
      "description": "Get persona by user ID or persona ID",
      "inputSchema": {
        "type": "object",
        "properties": {
          "personaId": {
            "type": "string"
          },
          "supabaseId": {
            "type": "string"
          }
        }
      }
    },
    {
      "name": "persona.update_field",
      "description": "Update a specific field in the persona (creates new version)",
      "inputSchema": {
        "type": "object",
        "properties": {
          "value": {
            "description": "New value for the field"
          },
          "fieldPath": {
            "type": "string",
            "description": "Dot notation path (e.g., \"style.formality\")"
          },
          "personaId": {
            "type": "string"
          },
          "supabaseId": {
            "type": "string"
          }
        }
      }
    },
    {
      "name": "persona.get_history",
      "description": "Get version history for a persona",
      "inputSchema": {
        "type": "object",
        "required": [
          "supabaseId"
        ],
        "properties": {
          "supabaseId": {
            "type": "string",
            "required": true
          }
        }
      }
    },
    {
      "name": "persona.rollback",
      "description": "Rollback persona to a previous version",
      "inputSchema": {
        "type": "object",
        "required": [
          "personaId",
          "toVersion"
        ],
        "properties": {
          "personaId": {
            "type": "string"
          },
          "toVersion": {
            "type": "number",
            "description": "Version number to rollback to"
          }
        }
      }
    },
    {
      "name": "persona.export",
      "description": "Export persona in different formats (JSON, YAML, LLM prompt)",
      "inputSchema": {
        "type": "object",
        "properties": {
          "format": {
            "enum": [
              "json",
              "yaml",
              "llm_prompt"
            ],
            "type": "string",
            "default": "json"
          },
          "personaId": {
            "type": "string"
          },
          "supabaseId": {
            "type": "string"
          }
        }
      }
    }
  ],
  "tool_count": 8,
