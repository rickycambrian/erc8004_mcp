{
  "id": "@microchipgnu/mcplace",
  "name": "@microchipgnu/mcplace",
  "display_name": "MCPlace",
  "version": null,
  "description": "A tribute to r/place. \n\nMCPlace is a shared canvas for MCP clients.",
  "icon_url": "https://icons.duckduckgo.com/ip3/mcplace.vercel.app.ico",
  "repository_url": null,
  "status": "active",
  "published_at": null,
  "tools": [
    {
      "name": "get_canvas",
      "description": "Render the current canvas in an embedded UI or return JSON state",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "properties": {
          "showUI": {
            "type": "boolean",
            "default": false
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "set_pixel",
      "description": "Set a single pixel to a palette color index",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "x",
          "y"
        ],
        "properties": {
          "x": {
            "type": "integer",
            "minimum": 0
          },
          "y": {
            "type": "integer",
            "minimum": 0
          },
          "color": {
            "type": "string",
            "default": "#000000"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "set_pixels",
      "description": "Set multiple pixels in one call",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "updates"
        ],
        "properties": {
          "updates": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "x",
                "y"
              ],
              "properties": {
                "x": {
                  "type": "integer",
                  "minimum": 0
                },
                "y": {
                  "type": "integer",
                  "minimum": 0
                },
                "color": {
                  "type": "string",
                  "default": "#000000"
                }
              },
              "additionalProperties": false
            },
            "minItems": 1
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "get_events",
      "description": "Get pixel-set events for replay",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "properties": {
          "limit": {
            "type": "integer",
            "exclusiveMinimum": 0
          }
        },
        "additionalProperties": false
      }
    }
  ],
  "tool_count": 4,
  "prompts": [],
  "resources": [],
  "remote_endpoint": "https://server.smithery.ai/@microchipgnu/mcplace/mcp",
  "packages": [],
  "sources": [
    "smithery"
  ],
  "primary_source": "smithery",
  "is_latest": true,
  "verified": false,
  "use_count": 0,
  "has_remote": true,
  "has_tools": true,
  "tool_names": [
    "get_canvas",
    "set_pixel",
    "set_pixels",
    "get_events"
  ]
}