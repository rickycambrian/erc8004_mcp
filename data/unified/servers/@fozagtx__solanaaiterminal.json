    {
      "name": "search_documentation",
      "title": "search_documentation",
      "description": "Search across the Solana documentation to find relevant information, code examples, API references, and guides. Use this tool when you need to answer questions about Solana, find specific documentation, understand how features work, or locate implementation details. The search returns contextual content with titles and direct links to the documentation pages.",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "query"
        ],
        "properties": {
          "query": {
            "type": "string",
            "description": "The search query string"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "get_account_info",
      "title": "get_account_info",
      "description": "Get information about a Solana account by its public key. Returns account balance, owner, data, and executable status.",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "address"
        ],
        "properties": {
          "address": {
            "type": "string",
            "pattern": "^[1-9A-HJ-NP-Za-km-z]{32,44}$",
            "description": "Solana account public key (base58-encoded)"
          },
          "commitment": {
            "enum": [
              "processed",
              "confirmed",
              "finalized"
            ],
            "type": "string",
            "default": "confirmed",
            "description": "Commitment level (processed | confirmed | finalized)"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "get_balance",
      "title": "get_balance",
      "description": "Get the SOL balance of a Solana account in both lamports and SOL.",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "address"
        ],
        "properties": {
          "address": {
            "type": "string",
            "pattern": "^[1-9A-HJ-NP-Za-km-z]{32,44}$",
            "description": "Solana account public key (base58-encoded)"
          },
          "commitment": {
            "enum": [
              "processed",
              "confirmed",
              "finalized"
            ],
            "type": "string",
            "default": "confirmed",
            "description": "Commitment level (processed | confirmed | finalized)"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "get_transaction",
      "title": "get_transaction",
      "description": "Retrieve details of a Solana transaction by its signature.",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "signature"
        ],
        "properties": {
          "signature": {
            "type": "string",
            "pattern": "^[1-9A-HJ-NP-Za-km-z]{87,88}$",
            "description": "Transaction signature (base58-encoded)"
          },
          "commitment": {
            "enum": [
              "processed",
              "confirmed",
              "finalized"
            ],
            "type": "string",
            "default": "confirmed",
            "description": "Commitment level"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "get_block",
