          },
          "priority": {
            "type": "string",
            "description": "New priority for the issue"
          },
          "assigneeId": {
            "type": "string",
            "description": "ID of the user to assign the issue to"
          },
          "categoryId": {
            "type": "string",
            "description": "ID of the category to assign the issue to"
          }
        },
        "additionalProperties": false
      }
    },
    {
