{
  "id": "@cameronapak/free-use-bible-mcp",
  "name": "@cameronapak/free-use-bible-mcp",
  "display_name": "Bible MCP",
  "version": null,
  "description": "Get Scripture from the Bible using Bible MCP. \n\nThank you to AO Lab for the Free Use Bible API that makes this possible.\n\nOpen source. Freely given. ",
  "icon_url": "https://spjawbfpwezjfmicopsl.supabase.co/storage/v1/object/public/server-icons/9c76d00e-9daa-41d5-8804-61bcfc808a09.webp",
  "repository_url": null,
  "status": "active",
  "published_at": null,
  "tools": [
    {
      "name": "get_available_translations",
      "description": "Fetch Available Bible Translations",
      "inputSchema": {
        "type": "object",
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "required": [
          "language"
        ],
        "properties": {
          "language": {
            "type": "string",
            "default": "eng",
            "description": "The ISO 639 3-letter language tag that the translation is primarily in (optional, defaults to 'eng')"
          }
        },
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "required": [
          "translations"
        ],
        "properties": {
          "translations": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "id",
                "englishName",
                "name",
                "website",
                "licenseUrl",
                "shortName"
              ],
              "properties": {
                "id": {
                  "type": "string",
                  "description": "The ID of the translation."
                },
                "name": {
                  "type": "string",
                  "description": "The name of the translation. This is usually the name of the translation in the translation's language."
                },
                "website": {
                  "type": "string",
                  "format": "uri",
                  "description": "The website for the translation."
                },
                "shortName": {
                  "type": "string",
                  "description": "The short name for the translation."
                },
                "licenseUrl": {
                  "type": "string",
                  "format": "uri",
                  "description": "The URL that the license for the translation can be found."
                },
                "englishName": {
                  "type": "string",
                  "description": "The English name of the translation."
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    },
