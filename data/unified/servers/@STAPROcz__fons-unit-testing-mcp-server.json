{
  "id": "@STAPROcz/fons-unit-testing-mcp-server",
  "name": "@STAPROcz/fons-unit-testing-mcp-server",
  "display_name": "fons-unit-testing-mcp-server",
  "version": null,
  "description": "Speed up writing unit tests for FONS Enterprise. Search trusted docs and code examples to learn patterns and grab relevant snippets. Generate AAA-style tests with mocking for your classes and methods in seconds.",
  "icon_url": "https://icons.duckduckgo.com/ip3/github.com.ico",
  "repository_url": null,
  "status": "active",
  "published_at": null,
  "tools": [
    {
      "name": "fons_search_docs",
      "title": "Search FONS Unit Testing Documentation",
      "description": "Search through FONS Enterprise unit testing documentation, workshops, and best practices",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "query"
        ],
        "properties": {
          "query": {
            "type": "string",
            "description": "Search query (e.g., 'How to mock FonsServices?', 'AAA pattern')"
          },
          "maxResults": {
            "type": "number",
            "default": 5,
            "maximum": 10,
            "minimum": 1,
            "description": "Maximum number of results to return (1-10)"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "fons_get_example",
      "title": "Get FONS Unit Test Example",
      "description": "Get specific code examples for FONS unit tests (basic, mock, async, parametrized, integration)",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "properties": {
          "tag": {
            "type": "string",
            "description": "Specific tag to filter by (e.g., 'fonsservices', 'AAA', 'mock')"
          },
          "category": {
            "enum": [
              "basic",
              "mock",
              "async",
              "parametrized",
              "integration"
            ],
            "type": "string",
            "description": "Example category"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "fons_generate_test",
      "title": "Generate FONS Unit Test",
      "description": "Generate a complete unit test for a FONS method with mocking and AAA pattern",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "className",
          "methodName"
        ],
        "properties": {
          "testType": {
            "enum": [
              "fact",
              "theory"
            ],
            "type": "string",
            "default": "fact",
            "description": "Test type: 'fact' for single test, 'theory' for parametrized"
          },
          "className": {
            "type": "string",
            "description": "Name of the class to test"
          },
          "methodName": {
            "type": "string",
            "description": "Name of the method to test"
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "serviceName",
                "interfaceName"
              ],
              "properties": {
                "serviceName": {
                  "type": "string",
                  "description": "Name of the FonsService dependency"
                },
                "interfaceName": {
                  "type": "string",
                  "description": "Interface name (e.g., IDatabaseService)"
                }
              },
              "additionalProperties": false
            },
            "description": "List of FonsServices dependencies"
          },
          "methodSignature": {
            "type": "string",
            "description": "Method signature (optional)"
          }
        },
        "additionalProperties": false
      }
    }
  ],
