  "verified": false,
  "use_count": 0,
  "has_remote": false,
  "has_tools": true,
  "tool_names": [
    "test_accessibility",
    "test_html_string",
    "get_rules",
    "check_color_contrast",
    "check_aria_attributes",
    "check_orientation_lock"
  ]
}