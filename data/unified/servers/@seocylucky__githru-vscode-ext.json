          "branch": {
            "type": "string",
            "description": "Branch to analyze (default: main)"
          },
          "locale": {
            "enum": [
              "en",
              "ko"
            ],
            "type": "string",
            "default": "en",
            "description": "Response language (en: English, ko: Korean)"
          },
          "repoPath": {
            "type": "string",
