    {
      "name": "opsgenie_create_alert",
      "description": "Create a new alert in Opsgenie",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "message"
        ],
        "properties": {
          "note": {
            "type": "string",
            "description": "Additional note that will be added while creating the alert"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Tags of the alert"
          },
          "user": {
            "type": "string",
            "description": "Display name of the request owner"
          },
          "alias": {
            "type": "string",
            "description": "Client-defined identifier of the alert"
          },
          "apiKey": {
            "type": "string",
            "description": "Opsgenie API key (optional if OPSGENIE_API_KEY env var is set)"
          },
          "entity": {
            "type": "string",
            "description": "Entity field of the alert"
          },
          "source": {
            "type": "string",
            "description": "Source field of the alert"
          },
          "actions": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Custom actions that will be available for the alert"
          },
          "details": {
            "type": "object",
            "description": "Map of key-value pairs to use as custom properties",
            "additionalProperties": {
              "type": "string"
            }
          },
          "message": {
            "type": "string",
            "description": "Message of the alert"
          },
          "priority": {
            "enum": [
              "P1",
              "P2",
              "P3",
              "P4",
              "P5"
            ],
            "type": "string",
            "description": "Priority level of the alert"
          },
          "visibleTo": {
            "type": "array",
            "items": {
              "$ref": "#/properties/responders/items"
            },
            "description": "Teams and users that the alert will become visible to"
          },
          "responders": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "type"
              ],
              "properties": {
                "id": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                },
                "type": {
                  "enum": [
                    "user",
                    "team",
                    "escalation",
                    "schedule"
                  ],
                  "type": "string"
                }
              },
              "additionalProperties": false
            },
            "description": "Responders that the alert will be routed to"
          },
          "description": {
            "type": "string",
            "description": "Description field of the alert"
          }
        },
        "additionalProperties": false
      }
