{
  "id": "@slamai/mcp-server",
  "name": "@slamai/mcp-server",
  "display_name": "SLAMai MCP Server (Base & Ethereum DeFi)",
  "version": null,
  "description": "A unified DeFi data server for Ethereum and Base, delivering real-time token prices, market analytics, and historical on-chain activity. Built for traders, analysts, and developers, it powers dashboards, monitoring, and automation with reliable access to token dynamics and blockchain insights.",
  "icon_url": "https://spjawbfpwezjfmicopsl.supabase.co/storage/v1/object/public/server-icons/2d54e017-5123-4ac2-8dfb-3ed1fa6957d3.png",
  "repository_url": null,
  "status": "active",
  "published_at": null,
  "tools": [
    {
      "name": "TokenPrice",
      "description": "Get prices across timeframes. Defaults to USD if no quote token given. Use ERC20 for custom quotes.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "atUtc": {
            "type": "string",
            "format": "MM-DD-YYYY hh:mm:ss"
          },
          "symbols": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "addresses": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "blockchain": {
            "type": "string",
            "default": "ethereum"
          },
          "quoteSymbol": {
            "type": "string"
          },
          "estimateCost": {
            "type": "boolean",
            "description": "False unless requesting SLAM cost to complete this call"
          },
          "quoteAddress": {
            "type": "string"
          },
          "atBlockNumber": {
            "type": "string"
          },
          "lookbackWindows": {
            "type": "array",
            "items": {
              "enum": [
                "1min",
                "3min",
                "5min",
                "15min",
                "30min",
                "45min",
                "1h",
                "2h",
                "3h",
                "4h",
                "6h",
                "12h",
                "1d",
                "3d",
                "1w",
                "2w",
                "1month",
                "3month",
                "6month",
                "1y"
              ],
              "type": "string",
              "description": "Calculated from now or atUtc/atBlockNumber (if supplied)"
            }
          }
        }
      }
    },
    {
      "name": "TokenTransfers",
      "description": "Get transfer details. Defaults to entire chain if no filters given. Use cursor from response to paginate.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "num": {
            "max": "1000",
            "type": "string",
            "default": "25"
          },
          "order": {
            "enum": [
              "asc",
              "desc"
            ],
            "type": "string",
            "default": "desc"
          },
          "startUtc": {
            "type": "string",
            "format": "MM-DD-YYYY hh:mm:ss"
          },
          "direction": {
            "enum": [
              "sent",
              "received",
              "all"
            ],
            "type": "string"
          },
          "blockchain": {
            "type": "string",
            "default": "ethereum"
          },
          "includeDna": {
            "type": "boolean",
            "description": "Optionally return sender & receiver size tiers, labels, current token & USD balances, and share of supply. Also token FDV & price at time of transfer"
          },
          "estimateCost": {
            "type": "boolean",
            "description": "False unless requesting SLAM cost to complete this call"
          },
          "tokenAddress": {
            "type": "string"
          },
          "startLogIndex": {
            "type": "string"
          },
          "walletAddress": {
            "type": "string",
            "description": "When supplied provides transfers for this wallet"
          },
          "startBlockNumber": {
            "type": "string"
          },
          "counterpartyAddress": {
            "type": "string",
            "description": "When supplied provides transfers between walletAddress & this counterparty"
          }
        }
      }
    },
    {
      "name": "TokenDiscovery",
      "description": "List of popular (current or historical), trending or newest tokens.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "num": {
            "max": "250",
            "type": "string",
            "default": "25"
          },
          "mode": {
            "enum": [
              "trending",
              "popular",
              "newest"
            ],
            "type": "string"
          },
          "category": {
            "type": "string",
            "description": "Only supported category is 'virtual' on Base. Don't use otherwise."
          },
          "blockchain": {
            "type": "string",
            "default": "ethereum"
          },
          "estimateCost": {
            "type": "boolean",
            "description": "False unless requesting SLAM cost to complete this call"
          },
          "actvityWindow": {
            "enum": [
              "5min",
              "15min",
              "1h",
              "3h",
              "6h",
              "1d",
              "MM-DD-YYYY"
            ],
            "type": "string",
            "description": "Replace MM-DD-YYYY with desired date when querying historical, else choose a window for current."
          }
        }
      }
    }
  ],
