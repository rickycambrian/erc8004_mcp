{
  "id": "@comqx/alertmanager-mcp",
  "name": "@comqx/alertmanager-mcp",
  "display_name": "Prometheus Alertmanager Integration Server",
  "version": null,
  "description": "Enable natural language interaction with Prometheus Alertmanager to manage alerts and silences efficiently. Retrieve, filter, and group alerts, as well as create and delete silences through a standardized interface. Simplify alert management by bridging Claude AI with Alertmanager's API.",
  "icon_url": null,
  "repository_url": null,
  "status": "active",
  "published_at": null,
  "tools": [
    {
      "name": "get-alerts",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "properties": {
          "active": {
            "type": "boolean",
            "description": "Include active alerts (default: true)"
          },
          "filter": {
            "type": "string",
            "description": "Filtering query (e.g. alertname=~'.*CPU.*')"
          },
          "silenced": {
            "type": "boolean",
            "description": "Include silenced alerts"
          },
          "inhibited": {
            "type": "boolean",
            "description": "Include inhibited alerts"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "get-alert-details",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "fingerprint"
        ],
        "properties": {
          "fingerprint": {
            "type": "string",
            "description": "Alert fingerprint"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "create-silence",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "matchers",
          "endsAt",
          "createdBy",
          "comment"
        ],
        "properties": {
          "endsAt": {
            "type": "string",
            "description": "Silence end time (ISO8601 format)"
          },
          "comment": {
            "type": "string",
            "description": "Reason or explanation for the silence"
          },
          "matchers": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "name",
                "value"
              ],
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Matcher name (e.g. alertname)"
                },
                "value": {
                  "type": "string",
                  "description": "Matcher value (e.g. HighCPULoad)"
                },
                "isRegex": {
                  "type": "boolean",
                  "description": "Use regex matching"
                }
              },
              "additionalProperties": false
            },
            "description": "List of matchers for alerts"
          },
          "startsAt": {
            "type": "string",
            "description": "Silence start time (ISO8601 format, default is current time)"
          },
          "createdBy": {
            "type": "string",
            "description": "Username who created the silence"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "get-silences",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "properties": {
          "filter": {
            "type": "string",
            "description": "Filtering query (e.g. createdBy=~'.*admin.*')"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "delete-silence",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "silenceId"
        ],
        "properties": {
          "silenceId": {
            "type": "string",
            "description": "ID of the silence to delete"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "get-alert-groups",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "properties": {
          "active": {
            "type": "boolean",
            "description": "Include active alerts (default: true)"
          },
          "silenced": {
            "type": "boolean",
            "description": "Include silenced alerts"
          },
          "inhibited": {
            "type": "boolean",
            "description": "Include inhibited alerts"
          }
        },
        "additionalProperties": false
      }
    }
  ],
  "tool_count": 6,
  "prompts": [],
  "resources": [],
  "remote_endpoint": null,
  "packages": [],
  "sources": [
    "smithery"
  ],
  "primary_source": "smithery",
  "is_latest": true,
  "verified": false,
  "use_count": 0,
  "has_remote": false,
  "has_tools": true,
  "tool_names": [
    "get-alerts",
    "get-alert-details",
    "create-silence",
    "get-silences",
    "delete-silence",
    "get-alert-groups"
  ]
}