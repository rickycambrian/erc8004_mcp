    {
      "name": "get_tasks_list",
      "description": "Get tasks list from Todoist",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "properties": {
          "ids": {
            "type": "string",
            "description": "Comma-separated list of task IDs"
          },
          "label": {
            "type": "string",
            "description": "Filter by label"
          },
          "limit": {
            "type": "number",
            "default": 50
          },
          "filter": {
            "type": "string",
            "description": "Natural language english filter like \"search: keyword\", \"today\", \"date before: +4 hours\", \"date after: May 5\", \"no date\", \"no time\", \"overdue\", \"7 days & @waiting\", \"created before: -365 days\", \"assigned to: person\", \"added by: me\", \"#Project & !assigned\", \"subtask\", \"!subtask\", \"P1 | P2\", \"today & @email\", \"@work | @office\", \"(today | overdue) & #Work\", \"all & 7 days\", \"!assigned\", \"Today & !#Work\""
          },
          "project_id": {
            "type": "string",
            "description": "Filter by project"
          },
          "section_id": {
            "type": "string",
            "description": "Filter by section"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "create_tasks",
      "description": "Create new tasks in Todoist",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "items"
        ],
        "properties": {
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "content"
              ],
              "properties": {
                "labels": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "content": {
                  "type": "string",
                  "description": "Task title (brief). May contain markdown-formatted text and hyperlinks"
                },
                "due_date": {
                  "type": "string",
                  "description": "Due date in YYYY-MM-DD format relative to user timezone (when you plan to work on task)"
                },
                "due_lang": {
                  "type": "string",
                  "description": "2-letter code specifying language in case due_string is not written in english"
                },
                "duration": {
                  "type": "integer",
                  "description": "A positive (greater than zero) integer for the amount of duration_unit the task will take",
                  "exclusiveMinimum": 0
                },
                "priority": {
                  "type": "integer",
                  "maximum": 4,
                  "minimum": 1,
                  "description": "From 1 (urgent) to 4 (normal)"
                },
                "parent_id": {
                  "type": "string"
                },
                "due_string": {
                  "type": "string",
                  "description": "Human defined task due date (ex.: \"next Monday\", \"Tomorrow\"). Value is set using local (not UTC) time, if not in english provided, due_lang should be set to the language of the string"
                },
                "project_id": {
                  "type": "string",
                  "description": "Task project ID. If not set, task is put to user's Inbox"
                },
                "section_id": {
                  "type": "string"
                },
                "assignee_id": {
                  "type": "string",
                  "description": "The responsible user ID (only applies to shared tasks)"
                },
                "description": {
                  "type": "string",
                  "description": "Description (detailed). May contain markdown-formatted text and hyperlinks"
                },
                "due_datetime": {
                  "type": "string",
                  "description": "Specific date and time in RFC3339 format in UTC"
                },
                "deadline_date": {
                  "type": "string",
                  "description": "Deadline date in YYYY-MM-DD format relative to user timezone (fixed date when task must be completed, for tasks with external consequences)"
                },
                "deadline_lang": {
                  "type": "string",
                  "description": "2-letter code specifying language of deadline"
                },
                "duration_unit": {
                  "enum": [
                    "minute",
                    "day"
                  ],
                  "type": "string",
                  "description": "The unit of time that the duration field represents. Must be either minute or day"
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    },
