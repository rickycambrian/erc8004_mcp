  "display_name": "Rootstock Blockchain Interaction Server",
  "version": null,
  "description": "Enable AI agents to interact seamlessly with the Rootstock blockchain by managing wallets, querying balances, sending transactions, and executing smart contract methods. Facilitate multi-network support including mainnet and testnet with gas estimation and network status features. Simplify blockchain operations for AI-driven applications with secure private key handling and modular design.",
  "icon_url": null,
  "repository_url": null,
  "status": "active",
  "published_at": null,
  "tools": [
    {
      "name": "get_balance",
      "description": "Get RBTC balance for a wallet address",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "address"
        ],
        "properties": {
          "address": {
            "type": "string",
            "description": "Wallet address to check balance for"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "deploy_token",
      "description": "Deploy an ERC20 token contract on Rootstock blockchain",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "required": [
          "name",
          "symbol",
          "totalSupply"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "Token name (e.g., \"My Token\")"
          },
          "symbol": {
            "type": "string",
            "description": "Token symbol (e.g., \"MTK\")"
          },
          "decimals": {
            "type": "number",
            "default": 18,
            "description": "Number of decimal places (default: 18)"
          },
          "gasLimit": {
            "type": "number",
            "description": "Gas limit for deployment (optional)"
          },
          "gasPrice": {
            "type": "string",
            "description": "Gas price in gwei (optional)"
          },
          "mintable": {
            "type": "boolean",
            "default": false,
            "description": "Whether the token should be mintable (default: false)"
          },
          "totalSupply": {
            "type": "string",
            "description": "Total supply of tokens (in token units, not wei)"
          }
        },
        "additionalProperties": false
      }
    },
    {
      "name": "get_network_info",
      "description": "Get current network information and status",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "properties": {},
        "additionalProperties": false
      }
    },
    {
      "name": "create_wallet",
      "description": "Create a new Rootstock wallet with a generated private key",
      "inputSchema": {
        "type": "object",
        "$schema": "http://json-schema.org/draft-07/schema#",
        "properties": {
          "name": {
            "type": "string",
            "description": "Optional name for the wallet"
          }
        },
        "additionalProperties": false
      }
    }
  ],
